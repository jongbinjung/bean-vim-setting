# Editor config file for dealing with multiple languages
# http://editorconfig.org

# Top of working directory
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.py]
indent_style = space
# TODO(jongbin): Based on existing codebase
indent_size = 4

[*.{R,r}]
indent_style = space
# TODO(jongbin): Based on existing codebase
indent_size = 2

[Makefile]
indent_style = tab

